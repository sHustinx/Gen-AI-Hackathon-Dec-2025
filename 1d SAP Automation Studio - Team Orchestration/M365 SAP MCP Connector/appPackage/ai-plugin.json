            "parameters": {
                "type": "object",
                "properties": {
                    "delivery": {
                        "description": "Inbound delivery",
                        "maximum": 9999,
                        "minimum": 0,
                        "type": "integer"
                    },
                    "product": {
                        "description": "Product",
                        "type": "string"
                    }
                },
                "required": [
                    "delivery",
                    "product"
                ]
            }
        }
    ],
    "runtimes": [
        {
            "type": "RemoteMCPServer",
            "spec": {
                "url": "https://nurvapg401slt.salt-solutions.de:44300/zmcp/orch/demo_session_standard?sap-client=200",
                "enable_dynamic_discovery": false
            },
            "run_for_functions": [
                "trigger_goods_receipt"
            ]
        }
    ]
